extends ../layout

block content

  h1= pageheader

  form#items-form(action='/')
    table.table.table-striped.table-bordered
      thead
        tr
          th User Name
          th Comment
          th Registered
      tbody
        - if (items.length)
        - each item in items
          tr.edit-item
            td= item.name
            td
              a(href="http://nodejs.org", title=item.text, target="_blank")= item.text
            td= formatDate(item.created)